{
  "manifest_version": 3,
  "name": "Sideby Pass",
  "description": "Ready to watch? Just pass it.",
  "version": "0.1.0",
  "permissions": ["tabs", "activeTab", "scripting", "contextMenus", "webRequest"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "192": "icon-192.png",
    "512": "icon-512.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Ready to watch? Just pass it.",
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["watcher.js"],
      "all_frames": true,
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["watcher.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
